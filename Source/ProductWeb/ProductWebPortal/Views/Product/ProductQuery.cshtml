@{
    Layout = null;
}
<!DOCTYPE html>
<script type="text/javascript" src="/ProductWebPortal/Scripts/jquery-1.8.2.js"></script>
<script type="text/javascript" src="/PlatJS/Scripts/toolkit/ajaxHelper.js"></script>

<script type="text/javascript">
    function onProductQueryClick() {
        var productName = $("#txtQueryProductName").val();
        var productType = $("#txtQueryProductType").val();
        
        parent.$("#hdnQueryProductName").val(productName);
        parent.$("#hdnQueryProductTypeId").val(productType);
    }
</script>


<div class="actions" >
    <input type="button" id="btnProductQuerySearch" class="btn" value="查询" onclick="onProductQueryClick(); parent.jQuery.fancybox.close();" />
    <input type="button" id="btnProductQueryClose" class="btn" value="关闭" onclick="parent.jQuery.fancybox.close();"/>
</div>
<div id="producQuery">
    <fieldset  style="height:260px;">
        <legend>查询条件</legend>
        <div style="margin-left:5px;">
            <label for="txtQueryProductName">产品名称</label>
            <input type="text" id="txtQueryProductName" value="" />
         </div>
        <div style="margin-left:5px;float:left">
            <label for="txtQueryProductType">产品类型</label>
            <input type="text" id="txtQueryProductType" value="3" />
         </div>
    </fieldset>
</div>
 


